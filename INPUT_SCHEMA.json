{
    "title": "PRCA Scraper Input",
    "type": "object",
    "schemaVersion": 1,
    "properties": {
        "startUrl": {
            "title": "Start URL",
            "type": "string",
            "description": "The URL to start scraping from",
            "default": "https://www.prorodeo.com/prorodeo/rodeos/results",
            "editor": "textfield"
        },
        "maxPages": {
            "title": "Max pages to scrape",
            "type": "integer",
            "description": "Maximum number of pages to scrape",
            "default": 10,
            "minimum": 1,
            "maximum": 100
        },
        "outputFormat": {
            "title": "Output format",
            "type": "string",
            "description": "Format for the output data",
            "default": "json",
            "enum": ["json", "csv"],
            "enumTitles": ["JSON", "CSV"]
        }
    },
    "required": ["startUrl"]
}